<style lang="scss">
  @import "@styles/variables";

  .description-course {
    display: flex;
    flex-direction: column;
    max-width: 480px;
    margin-inline: auto;

    ul li ul {
      padding-left: 20px;
      list-style: disc;
    }
  }

  .grid {
    max-width: 480px;
    margin-inline: auto;
    display: grid;
    place-content: center;
    grid-template-columns: repeat(auto-fill, minmax(min(100%, 200px), 1fr));
    grid-auto-rows: min-content;
    gap: 4px;

    li {
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    .vertical {
      grid-row: span 2;
    }
  }

  @media (width > 768px) {
    .description-course {
      flex-direction: row;
      max-width: none;
      column-gap: 64px;

      .col {
        width: 50%;
      }
    }

    .grid {
      max-width: none;
      grid-template-columns: repeat(auto-fill, minmax(min(100%, 200px), 1fr));
      grid-template-columns: 1fr 1fr 1fr;

      li:nth-child(12),
      li:nth-child(13) {
        display: none;
      }
    }
  }
</style>
