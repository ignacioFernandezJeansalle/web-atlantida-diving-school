---
interface Props {
  b: {
    id: string;
    name: string;
    img: string;
    withTitle: boolean;
    facebookAlbum: string;
    pill?: string;
  };
}

const { b } = Astro.props;

const src = `/img/buda/${b.img}`;
const alt = `Foto del grupo de buceadores en espejo de agua El Buda. ${b.name}`;
const withTitle = b.withTitle;
const name = b.name;
const pill = b.pill;
---

<article>
  <img src={src} alt={alt} loading="lazy" />
  {
    !withTitle && (
      <div class="title">
        <h2>{name}</h2>
      </div>
    )
  }
  {pill && <div class="pill">{pill}</div>}
</article>

<style lang="scss">
  @import "@styles/variables";

  article {
    position: relative;

    img {
      position: relative;
      display: block;
      width: 100%;
      height: auto;
      aspect-ratio: 4/3;
      object-fit: contain;
      background: #000;
    }

    .title {
      position: absolute;
      bottom: 0;
      width: 100%;
      backdrop-filter: blur(1px);

      h2 {
        height: 40px;
        line-height: 56px;
        padding-left: 4px;
        background: linear-gradient(to top, rgba($color-primary, 1) 45%, rgba($color-primary, 0) 100%);
        font-family: $font-family;
        font-weight: 400;
        font-size: 16px;
        text-align: left;
        color: $font-color-min;
      }
    }

    .pill {
      position: absolute;
      top: 6px;
      right: 6px;
      padding: 2px 8px;
      background: rgba($color-secondary, 0.9);
      color: $font-color-min;
      border-radius: 9999px;
      font-size: $font-size * 0.9;
    }
  }
</style>
