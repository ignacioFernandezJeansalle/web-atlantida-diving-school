---
const { individuo } = Astro.props;
const { name, description, number, picture } = individuo;
---

<article>
  <img src=`/img/nosotros/${picture}` alt=`${description} ${name}` />
  <div>
    <h4>{name}</h4>
    <h5>{description}</h5>
    <p>{number}</p>
  </div>
</article>

<style lang="scss">
  @import "@styles/variables";

  article {
    display: flex;
    flex-direction: column;
    box-shadow: $box-shadow-primary;
    border-radius: 4px;
    overflow: hidden;
    background: $color-body-secondary;
    max-width: 280px;

    img {
      display: block;
      width: 100%;
      height: auto;
      aspect-ratio: 435 / 500;
    }

    div {
      padding: 16px;
      text-align: center;

      h4 {
        font-size: 24px;
        margin-bottom: 8px;
      }

      h5 {
        font-size: 18px;
        font-weight: 400;
        text-wrap: balance;
        margin-bottom: 4px;
      }

      p {
        font-size: 14px;
        font-weight: 700;
      }
    }
  }
</style>
